<Window x:Class="GUI.UpdateProductGUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="UpdateProductGUI" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.652,0.447">
        <Label Name="lblName" Content="Name:" HorizontalAlignment="Left" Margin="30,48,0,0" VerticalAlignment="Top"/>
        <Label Name="lblPrice" Content="Price:" HorizontalAlignment="Left" Margin="30,79,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.441,0.498"/>
        <TextBox Name="txtName" HorizontalAlignment="Left" Height="23" Margin="127,51,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="txtPrice" HorizontalAlignment="Left" Height="23" Margin="127,82,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.484,0.688"/>
        <TextBox Name="txtSearch" HorizontalAlignment="Left" Height="23" Margin="315,380,0,0" TextWrapping="Wrap" Text="Search..." VerticalAlignment="Top" Width="120" TextChanged="txtSearch_TextChanged"/>
        <ListBox Name="listProducts" HorizontalAlignment="Left" Height="365" Margin="315,10,0,0" VerticalAlignment="Top" Width="410" SelectionChanged="listProducts_SelectionChanged"/>
        <Label Name="lblDescription" Content="Description:" HorizontalAlignment="Left" Margin="30,175,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtDescription" HorizontalAlignment="Left" Height="197" Margin="39,206,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="212"/>
        <Button Name="btnDone" Content="Update" HorizontalAlignment="Left" Margin="561,384,0,0" VerticalAlignment="Top" Width="75" Click="btnDone_Click"/>
        <Button Name ="btnBack" Content="Back" HorizontalAlignment="Left" Margin="650,384,0,0" VerticalAlignment="Top" Width="75" Click="btnBack_Click"/>
        <Label x:Name="lblBrand" Content="Brand" HorizontalAlignment="Left" Margin="30,110,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.441,0.498"/>
        <Label x:Name="lblCategory" Content="Category:" HorizontalAlignment="Left" Margin="30,141,0,0" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="127,114,0,0" VerticalAlignment="Top" Width="120" Name="BrandCombo" />
        <ComboBox HorizontalAlignment="Left" Margin="127,145,0,0" VerticalAlignment="Top" Width="120" Name="CategoryCombo"/>

    </Grid>
</Window>
